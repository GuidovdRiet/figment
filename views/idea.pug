extends layout

include mixins/_commentForm

block content
    .single_idea_card
        != helpers.icon('figment-logo-brand')
        h1= idea.title
        //- img(src=`/uploads/${idea.photo}`, alt="idea photo")
        p= idea.body
        
        ul 
            each tag in idea.tags
                li= tag

        .buttons_container
            if user && idea.author._id.equals(user._id)
                a(href=`/idea/${idea._id}/edit`).btn.btn_edit Edit
                a(href=`/idea/${idea._id}/delete/`).btn.btn_remove Delete
    

    +commentForm(idea)

    //- make a mixin for a review
    if idea.comments 
        each comment in idea.comments
            .single_idea_card
                p= comment.text