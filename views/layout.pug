doctype html 
html
    head
        title= title
        link(rel="stylesheet", href="/dist/style.bundle.css")
        link(href='https://fonts.googleapis.com/css?family=Playfair+Display|Source+Sans+Pro:300,300i,700', rel='stylesheet')

    body
        .wrapper
            .nav
                a(href="/")
                    img(src="images/figment-logo.svg", alt="Figment").logo
                a(href="/") Home
                a(href="/") Ideas
                a(href="/") Artical
                a(href="/inspiration") Inspiration
                
            if user
                a(href="/account").account
                    img(src=user.gravatar).gravatar
            else 
                a(href="/login") Login


            .messages 
                if locals.messages
                    each type in Object.keys(messages)
                        each message in messages[type]
                            .alert #{message}
                            
            block content

            block scripts
                script(src='/dist/app.bundle.js')